@model IEnumerable<Project>

@if (Model is not null)
{
    <div class="row mx-auto">
        @foreach (var project in Model)
        {
            <div class="col-xl-4 col-md-4 col-sm-6 col-xs-12 gy-4 align-items-stretch">
                <div id="cards-style" class="card w-100 border-1" style="width: 18rem; border-color:antiquewhite">
                    <div class="position-relative">
                        <img src="@project.ImageURL" class="card-img-top" style="height:280px;" alt="...">
                    </div>
                    <div class="card-body d-flex flex-column" style="background-color:azure;">
                        <h5 id="card-name" class="card-title"><small> @project.Tittle</small></h5>
                        <div class="d-flex flex-row-reverse bd-highlight justify-content-between">
                            <small>@project.Description</small>
                        </div>
                        <a class="btn btn-primary mt-3" href="@project.Link">Go to the Poject</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
